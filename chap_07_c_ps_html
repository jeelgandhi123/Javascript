    <div class="box">div 3</div>
    <script>
        // Create a H2 heading element with text - “Hello JavaScript”. Append “from Apna Collegestudents” to this text using JS.
        let heading = document.querySelector("h2")
        heading.innerText += " from apna collage"

        // Qs. Create 3 divs with common class name - “box” . Access them & add some unique text to each of them
        let divs = document.querySelectorAll(".box")

        // console.log(divs[0])
        // console.log(divs[1])
        // console.log(divs[2])

        let temp = 0;

        for (value of divs) {
            // console.log(value)
            value.innerText = `this is changed value of div ${temp} `
            temp++;
        }
        // divs[0].innerText="Changed!! div-1"
        // divs[1].innerText="Changed!! div-2"
        // divs[2].innerText="Changed!! div-3"
    </script>
